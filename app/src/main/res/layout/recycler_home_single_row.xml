<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1E3E3"
    android:layout_margin="6dp"
    app:cardCornerRadius="5.2dp"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgRestaurants"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="110dp"
            android:src="@drawable/restaurant_img"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edge"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRestaurantsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurants_name"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/txtPriceSymbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:padding="10sp"
                android:fontFamily="@font/poppins"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_person"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/poppins"
                android:paddingLeft="38dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txtPerPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/person"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgFavourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_non_favourite" />

            <TextView
                android:id="@+id/txtRestaurantRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="20sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_below="@+id/imgFavourite"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>